<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Login">

        <!-- MainActivity - Login Screen (LAUNCHER) -->
        <activity
            android:name=".view.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- WelcomeActivity - Home Screen -->
        <activity
            android:name=".view.WelcomeActivity"
            android:exported="false" />

        <!-- RecoveryActivity - Password Recovery -->
        <activity
            android:name=".view.RecoveryActivity"
            android:exported="false" />

        <!-- NewPasswordActivity - Set New Password -->
        <activity
            android:name=".view.NewPasswordActivity"
            android:exported="false" />

        <!-- ChangePasswordActivity - Change Password from Menu -->
        <activity
            android:name=".view.ChangePasswordActivity"
            android:exported="false" />

    </application>

</manifest>